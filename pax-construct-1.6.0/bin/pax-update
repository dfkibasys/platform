if [ -z "${PAX_CONSTRUCT_VERSION}" ]
then
  PAX_CONSTRUCT_VERSION=1.6.0
fi

PAX_PLUGIN=org.ops4j:maven-pax-plugin:${PAX_CONSTRUCT_VERSION}

unset _VERSION_
unset _OVERWRITE_

while
  getopts v:oh- _SETTING_
do
  case ${_SETTING_} in
    h|\?) echo "pax-update [-v version] [-o] [-- mvnOpts ...]"
          echo "@ http://www.ops4j.org/projects/pax/construct/help/update.html"
          exit ;;

    v) _VERSION_=${OPTARG} ;;
    o) _OVERWRITE_=-Doverwrite ;;

    -) break ;;
  esac
done

shift $((${OPTIND}-1))

_VERSION_=${_VERSION_:-RELEASE}

if [ -n "${PAX_PROMPT}" ]
then
  echo
  echo "pax-update [-v version] [-o] [-- mvnOpts ...]"
  echo

  unset _INPUT_
  read -p "version (${_VERSION_}) ? " _INPUT_
  _VERSION_=${_INPUT_:-${_VERSION_}}

  echo
fi

exec mvn -N ${PAX_PLUGIN}:update \
  "-Dversion=${_VERSION_}" \
  ${PAX_CONSTRUCT_OPTIONS} ${_OVERWRITE_} "$@"

